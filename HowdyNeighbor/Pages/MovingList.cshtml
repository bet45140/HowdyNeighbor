@page
@model HowdyNeighbor.Pages.MovingListModel
@{
    ViewData["Title"] = "My List";
}
<style>
    table {
        border: 1px solid slategray;
        background-color: white;
    }
    td {
        border-top: 1px solid slategray;
        border-bottom: 1px solid slategray;
        width: 360px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<p>View a moving checklist that you have saved.</p>

<form method="post" style="background-color: #FFFFF4; padding: 2%; border: 1px solid slategray;">
    <h3>Today</h3>
    <table>
        <thead>
            <tr>
                <th>Action</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < MovingListModel.ChecklistTasks.Count(); i++)
            {
                <tr>
                    @if (MovingListModel.ChecklistTasks[i].Date <= DateTime.Now)
                    {
                        <td>@MovingListModel.ChecklistTasks[i].Action</td>
                        <td>(@MovingListModel.ChecklistTasks[i].Status)</td>
                        <td><span style="color: lightslategray"><i>@MovingListModel.ChecklistTasks[i].Date.ToShortDateString()</i></span></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />

    <h3>Tomorrow</h3>
    <table>
        <tbody>
            @for (var i = 0; i < MovingListModel.ChecklistTasks.Count(); i++)
            {
                <tr>
                    @if (MovingListModel.ChecklistTasks[i].Date <= DateTime.Now.AddDays(1) && MovingListModel.ChecklistTasks[i].Date > DateTime.Now)
                    {
                        <td>@MovingListModel.ChecklistTasks[i].Action</td>
                        <td>(@MovingListModel.ChecklistTasks[i].Status)</td>
                        <td><span style="color: lightslategray"><i>@MovingListModel.ChecklistTasks[i].Date.ToShortDateString()</i></span></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />

    <h3>Later this week</h3>
    <table>
        <tbody>
            @for (var i = 0; i < MovingListModel.ChecklistTasks.Count(); i++)
            {
                <tr>
                    @if (MovingListModel.ChecklistTasks[i].Date <= DateTime.Now.AddDays(7) && MovingListModel.ChecklistTasks[i].Date > DateTime.Now.AddDays(1))
                    {
                        <td>@MovingListModel.ChecklistTasks[i].Action</td>
                        <td>(@MovingListModel.ChecklistTasks[i].Status)</td>
                        <td><span style="color: lightslategray"><i>@MovingListModel.ChecklistTasks[i].Date.ToShortDateString()</i></span></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />

    <h3>Later this month</h3>
    <table>
        <tbody>
            @for (var i = 0; i < MovingListModel.ChecklistTasks.Count(); i++)
            {
            <tr>
                @if (MovingListModel.ChecklistTasks[i].Date > DateTime.Now.AddDays(7))
                {
                    <td>@MovingListModel.ChecklistTasks[i].Action</td>
                    <td>(@MovingListModel.ChecklistTasks[i].Status)</td>
                    <td><span style="color: lightslategray"><i>@MovingListModel.ChecklistTasks[i].Date.ToShortDateString()</i></span></td>
                }
            </tr>
            }
        </tbody>
    </table>
    <br />
</form>
<br />
<select multiple style="width: 100%; height: 180px;">
    <optgroup label="Shipping">
        <option value="1">Collect boxes for household items</option>
        <option value="2">Contact moving company</option>
    </optgroup>
    <optgroup label="Pets">
        <option value="2">Contact local veterinarian's office</option>
        <option value="3">Research local laws / homeowner's association policies for pets</option>
        <option value="4">Transfer pet medications to new veterinarian's office</option>
        <option value="5">Look into local dog parks, pet stores, etc.</option>
    </optgroup>
    <optgroup label="Voting">
        <option value="6">Update voter registration address</option>
        <option value="7">Research residency requirements for voting</option>
    </optgroup>
    <optgroup label="Health">
        <option value="8">Transfer perscriptions to new pharmacy</option>
        <option value="9">Contact local doctor's office</option>
        <option value="10">Contact local dentist's office</option>
    </optgroup>
    <optgroup label="Neighborhood">
        <option value="11">Contact homeowner's association</option>
        <option value="12">Contact neighbors</option>
        <option value="13">Contact local newspaper delivery service</option>
    </optgroup>
    <optgroup label="School">
        <option value="14">Contact local school district</option>
    </optgroup>
</select>
<br />
<br />
<input type="text" />
<br />
<br />
<input class="form-control" type="datetime-local" />
<br />
<button style="text-align: center">Update</button>